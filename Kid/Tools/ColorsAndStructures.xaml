<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <LinearGradientBrush x:Key="Button">
        <GradientStop Color="#cec3d5"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="Grid" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#655e6a" Offset="0" />
        <GradientStop Color="#996d50" Offset="0.35" />
        <GradientStop Color="#fd8a1d" Offset="1" />
    </LinearGradientBrush>
    <Style TargetType="Button">
        <Setter Property="Background" Value="{StaticResource Button}"/>
        <Setter Property="Foreground" Value="Black"></Setter>
        <Setter Property="Width" Value="120"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="FontSize" Value="18"/>
    </Style>
    <Style TargetType="Border">
        <Setter Property="CornerRadius" Value="5"/>
    </Style>
    <Style TargetType="Grid">
        <Setter Property="Background" Value="{StaticResource Grid}"/>
    </Style>
    <Style TargetType="Label">
        <Setter Property="FontSize" Value="18"/>
    </Style>
    <Style TargetType="TextBlock">
        <Setter Property="FontSize" Value="18"/>
    </Style>
</ResourceDictionary>